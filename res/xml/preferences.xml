<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


	<PreferenceCategory android:title="@string/bluetooth">
		<uk.org.smithfamily.mslogger.widgets.BluetoothDevicePreference
			android:title="Bluetooth Device" android:key="bluetooth_mac"
			android:dialogTitle="Choose Bluetooth Device" />
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/megasquirt">
		<ListPreference android:entries="@array/MSNames"
			android:key="mstype" android:entryValues="@array/MSNames"
			android:defaultValue="MS1Extra" android:title="@string/ms_model" />
		<ListPreference android:key="maptype" android:entries="@array/mapnames"
			android:entryValues="@array/maptypes" android:title="@string/map_sensor" />
		<ListPreference android:key="egotype" android:entries="@array/egonames"
			android:entryValues="@array/egotypes" android:title="@string/ego_sensor" />
		<ListPreference android:key="temptype" android:title="@string/temp_unit"
			android:entries="@array/tempent" android:entryValues="@array/tempvalues"
			android:defaultValue="CELSIUS" />
	</PreferenceCategory>

	<PreferenceCategory android:title="@string/AppSettings">
		<EditTextPreference android:dialogTitle="@string/data_log_directory"
			android:defaultValue="@string/app_name" android:key="DataDir"
			android:title="Log Directory" />
		<CheckBoxPreference android:key="autoemail_enabled"
			android:title="@string/autoemail_autosend" android:summary="@string/autoemail_autosend_summary" />

		<EditTextPreference android:key="autoemail_target"
			android:title="@string/autoemail_target" android:summary="@string/autoemail_target_summary"
			android:dialogTitle="@string/autoemail_target" android:hint="@string/autoemail_sendto" />
	</PreferenceCategory>

	<PreferenceCategory android:title="Gauges">
	<uk.org.smithfamily.mslogger.widgets.GaugeChoicePreference android:title="Gauge 1" android:key="gauge1" android:dialogTitle="Choose Gauge 1"/>
	<uk.org.smithfamily.mslogger.widgets.GaugeChoicePreference android:title="Gauge 2" android:key="gauge2" android:dialogTitle="Choose Gauge 2"/>
	<uk.org.smithfamily.mslogger.widgets.GaugeChoicePreference android:title="Gauge 3" android:key="gauge3" android:dialogTitle="Choose Gauge 3"/>
	<uk.org.smithfamily.mslogger.widgets.GaugeChoicePreference android:title="Gauge 4" android:key="gauge4" android:dialogTitle="Choose Gauge 4"/>
	<uk.org.smithfamily.mslogger.widgets.GaugeChoicePreference android:title="Gauge 5" android:key="gauge5" android:dialogTitle="Choose Gauge 5"/>
	
	
	
	</PreferenceCategory>
</PreferenceScreen>
