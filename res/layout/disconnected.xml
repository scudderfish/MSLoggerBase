	android:layout_gravity="center" android:layout_margin="1px"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal">


	<TextView android:layout_alignParentBottom="true"
		android:layout_gravity="center_horizontal" android:text="Foo"
		android:layout_height="wrap_content" android:id="@+id/messages"
