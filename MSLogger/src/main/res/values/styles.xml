<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Label" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">8sp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_weight">0.20</item>
    </style>

    <style name="Indicator" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_weight">0.30</item>
    </style>

    <style name="gaugeLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="gaugeEdit" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">0dp</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.75</item>
    </style>
    
    <style name="gaugeSpinner" parent="@android:style/Widget.Spinner">
        <item name="android:layout_width">0dp</item>
         <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.75</item>
    </style>

    <style name="gaugeRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Gauge">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="IndicatorRow">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ButtonRow">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Styled" parent="Theme.AppCompat">
        <!-- If the ActionBarSherlock height is changed, remember to also change the dimensions for the icon SVGDrawables -->
        <item name="actionBarSize">38dp</item>
        <item name="windowActionBarOverlay">true</item>

        <!-- The following is one possible workaround for a problem with the jfeinstein10/SlidingMenu library
        where the bottom navigation bar obscures the layout on Lollipop.
        This isn't necessarily the best 'fix' and this needs to be reviewed.
        See http://stackoverflow.com/questions/28693442/
        Also http://stackoverflow.com/questions/27781023 -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">false</item>
    </style>
    <style name="Theme.Styled.NoActionBarOverlay" parent="Theme.Styled">

        <item name="windowActionBarOverlay">false</item>
<!--        <item name="actionBarStatusTextStyle">@style/ActionBar.StatusText</item>-->
<!--        <item name="actionBarProjectInfoTextStyle">@style/ActionBar.ProjectInfoText</item>-->
        <!--
		<item name="android:background">#ff303030</item>
    	<item name="background">#ff202020</item>
        -->
    </style>


</resources>